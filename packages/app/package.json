	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"format": "prisma format && prettier --cache --write .",
		"prisma:generate": "prisma format && prisma generate",
		"prelint": "pnpm prisma:generate",
		"lint": "eslint .",
		"predev": "pnpm prisma:generate && kill-port 3000",
		"dev": "next dev",
		"dev:tauri": "tauri dev",
		"prebuild": "pnpm prisma:generate && rimraf .next ../../docs",
		"build": "next build",
		"postbuild": "touch ../../docs/.nojekyll",
		"build:tauri": "tauri build",
		"build:android": "rimraf mobile/android && cap add android",
		"build:ios": "rimraf mobile/ios && cap add ios",
		"prestart": "pnpm prisma:generate && kill-port 3000",
		"start": "next start",
		"pretest": "pnpm prisma:generate && rimraf coverage",
		"test": "jest"
	},
	"dependencies": {
		"@capacitor/android": "8.0.1",
		"@capacitor/core": "8.0.1",
		"@capacitor/ios": "8.0.1",
		"@prisma/client": "7.2.0",
		"@tanstack/react-query": "5.90.17",
		"@trpc/client": "11.8.1",
		"@trpc/next": "11.8.1",
		"@trpc/react-query": "11.8.1",
		"@trpc/server": "11.8.1",
		"bcrypt": "6.0.0",
		"cookie": "1.1.1",
