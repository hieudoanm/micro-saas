		"next": "16.1.2",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"resend": "6.7.0",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@capacitor/cli": "8.0.1",
		"@eslint/eslintrc": "3.3.3",
		"@tailwindcss/postcss": "4.1.18",
		"@tauri-apps/cli": "2.9.6",
		"@types/bcrypt": "6.0.0",
		"@types/jsonwebtoken": "9.0.10",
		"@types/node": "25.0.8",
		"@types/react": "19.2.8",
		"@types/react-dom": "19.2.3",
		"daisyui": "5.5.14",
		"eslint": "9.39.2",
